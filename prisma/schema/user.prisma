model User {
  id                 String     @id @default(uuid())
  email              String     @unique
  password           String?
  role               UserRole   @default(PATIENT)
  needPasswordChange Boolean    @default(true)
  status             UserStatus @default(ACTIVE)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  admin   Admin?
  doctor  Doctor?
  patient Patient?

  @@map("users")
}

model Admin {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  profilePhoto  String?
  contactNumber String
  isDeleted     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [email], references: [email])

  @@map("admins")
}

model Doctor {
  id                 String   @id @default(uuid())
  name               String
  email              String   @unique
  profilePhoto       String?
  contactNumber      String
  address            String   @default("")
  registrationNumber String   @default("")
  experience         Int      @default(0)
  gender             Gender   @default(MALE)
  appointmentFee     Int      @default(500)
  qualification      String   @default("")
  currentWorkplace   String   @default("")
  designation        String   @default("")
  isDeleted          Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user            User             @relation(fields: [email], references: [email])
  doctorSchedules doctorSchedule[]

  @@map("doctors")
}

model Patient {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  profilePhoto String?
  address      String?
  age          Int?     @default(0)
  isDeleted    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [email], references: [email])

  @@map("patients")
}
